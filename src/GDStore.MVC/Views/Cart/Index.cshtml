
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="checkout">
    <div class="container">
        <div class="your-cart">
            <div class="title">Giỏ hàng</div>
            <div class="row mt-4 mb-2">
                <p><a href="#">❮ Mua thêm sản phẩm khác</a></p>
            </div>
            <div class="list-cart">
                <div class="cart-item d-flex justify-content-between">
                    <div class="img-product">
                        <img src="/img/product/male/product-2.webp" alt="" class="w-100">
                    </div>
                    <div class="">
                        <p>Giày Thể Thao Nam Biti's Hunter X Matcha DSMH03400XMN (Xanh Mi Nơ)</p>
                        <div class="action-cart">
                            <a href="#"><i class="fas fa-trash"></i> Xóa</a>
                        </div>
                    </div>
                    <div class="cart-item-price">
                        <p><strong>500.000₫</strong></p>
                        <p><del>900.000₫</del> <label class="badge badge-warning">-50%</label></p>
                    </div>
                    <div class="action-quantity">
                        <button class="btn-decre btn-change-qty" onclick="changeQty(this)">-</button>
                        <input class="quantity" type="text" value="1">
                        <button class="btn-incre btn-change-qty" onclick="changeQty(this)">+</button>
                    </div>
                </div>
                <hr>
                <div class="cart-item d-flex justify-content-between">
                    <div class="img-product">
                        <img src="/img/product/male/product-2.webp" alt="" class="w-100">
                    </div>
                    <div class="">
                        <p>Giày Thể Thao Nam Biti's Hunter X Matcha DSMH03400XMN (Xanh Mi Nơ)</p>
                        <div class="action-cart">
                            <a href="#"><i class="fas fa-trash"></i> Xóa</a>
                        </div>
                    </div>
                    <div class="cart-item-price">
                        <p><strong>500.000₫</strong></p>
                        <p><del>900.000₫</del> <label class="badge badge-warning">-50%</label></p>
                    </div>
                    <div class="action-quantity">
                        <button class="btn-decre btn-change-qty" onclick="changeQty(this)">-</button>
                        <input class="quantity" type="text" value="1">
                        <button class="btn-incre btn-change-qty" onclick="changeQty(this)">+</button>
                    </div>
                </div>
                <hr>
            </div>
            <div class="total clearfix">
                <p class="float-right"><strong>Tổng tiền: 1.000.000₫</strong></p>
            </div>
        </div>
        <form action="#" method="POST">
            <h6>Nhập thông tin đặt mua</h6>
            <div class="row mt-4" style="height: 275px;">
                <div class="rg-checkout col-md-8">
                    <div class="form-checkout">
                        <div class="form-group">
                            <input type="text" placeholder="Họ và tên" class="form-control">
                        </div>
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <input type="email" placeholder="Email" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input type="text" placeholder="Số điện thoại" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="text" placeholder="Địa chỉ (VD: số nhà A, đường B, khối C)" class="form-control">
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <select name="" id="" class="form-control">
                                        <option value="">Tỉnh/Thành phố</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <select name="" id="" class="form-control">
                                        <option value="">Quận/Huyện</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <select name="" id="" class="form-control">
                                        <option value="">Phường/Xã</option>
                                    </select>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="">
                        <img src="/img/shipper.png" alt="" class="w-100">
                    </div>
                    <label for="delegate" class="mt-2">
                        <input type="checkbox" name="" id="delegate">
                        Gọi người khác nhận (nếu có)
                    </label>
                    <div class="customer-delegate" style="display: none;">
                        <div class="form-group">
                            <input type="text" placeholder="Họ và tên" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" placeholder="Số điện thoại" class="form-control">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success w-100">Thanh toán ngay</button>
                </div>
            </div>
        </form>
    </div>
</section>

